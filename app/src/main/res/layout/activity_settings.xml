    <Button
        android:id="@+id/addBtn"
        android:layout_width="64dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="@+id/newPlayerTxtInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newPlayerTxtInput"
        app:layout_constraintTop_toTopOf="@+id/newPlayerTxtInput"
        app:layout_constraintVertical_bias="0.485" />

    <EditText
        android:id="@+id/newPlayerTxtInput"
        android:layout_width="313dp"
        android:layout_height="43dp"
        android:layout_marginTop="108dp"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darkPlayerSpinner" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:text="@string/start"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
